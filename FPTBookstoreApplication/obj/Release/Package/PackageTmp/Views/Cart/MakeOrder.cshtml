@model FPTBookstoreApplication.Models.Account
@{
    ViewBag.Title = "MakeOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int sum = Convert.ToInt32(Session["sum"]);
}


<div class="wrapper">
    @using (Html.BeginForm("MakeOrder", "Cart", FormMethod.Post, new { @class = "login-form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="header">
            <h2 class="header-login">Confirm Order</h2>
        </div>
        <div class="login-items">
            <div class="username-password-items">

                <label for="email-f18c" class="header-input-item">Full name</label>
                <input type="text" id="fullname" name="fullname" class="input-item" required="required" value="@Model.FullName" />

                <label for="email-f18c" class="header-input-item">Address Delivery</label>
                <input type="text" placeholder="Enter your address to recive book" id="address" name="address" class="input-item" required="required">

                <label for="phone-4078" class="header-input-item">Phone Number</label>
                <input type="tel" pattern="\+?\d{0,3}[\s\(\-]?([0-9]{2,3})[\s\)\-]?([\s\-]?)([0-9]{3})[\s\-]?([0-9]{2})[\s\-]?([0-9]{2})" value="@Model.PhoneNumber" id="phone" name="phone" class="input-item" required="">

                <label for="text-6c83" class="header-input-item">Total Money</label>
                <input id="total" name="total" class="input-item" type="" value="@sum" required="required">

                <input type="checkbox" id="agree-f03e" name="agree" class="u-agree-checkbox" required="">
                <label for="agree-f03e" class="u-label">I accept all policy and accept order</label>
            </div>
            <div style="margin-bottom:5%" class="btn-item">
                <button type="submit" class="submit-btn1">Confirm</button>
            </div>
            <div class="btn-item">
                <button class="submit-btn23">
                    @Html.ActionLink("Cancel", "Index", "Cart")
                </button>
            </div>

        </div>
    }

</div>