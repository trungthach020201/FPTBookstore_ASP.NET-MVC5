@model FPTBookstoreApplication.Models.Category

@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<div class="wrapper">

    @using (Html.BeginForm("EditCategory", "ManageCategory", FormMethod.Post, new { @class = "login-form", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="header">
            <h2 class="header-login">Edit Category's Information</h2>
        </div>
        <div class="login-items">

            <div class="username-password-items">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CategoryId)


                @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "header-input-item" })
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "input-item" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
                <div style="margin-bottom:5%;" class="btn-item">
                <button type="submit" class="submit-btn1">Update Information</button>
            </div>
            <div class="btn-item">
                <button class="submit-btn23">
                    @Html.ActionLink("Cancel", "Index", "ManageAuthor")
                </button>
            </div>
        </div>
    }

</div>
