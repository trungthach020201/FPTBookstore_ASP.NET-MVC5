@model FPTBookstoreApplication.Models.Author

@{
    ViewBag.Title = "EditAuthor";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<div class="wrapper">

    @using (Html.BeginForm("EditAuthor", "ManageAuthor", FormMethod.Post, new { @class = "login-form", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="header">
            <h2 class="header-login">Edit Author's Information</h2>
        </div>


        <div class="login-items">

            <div class="username-password-items">
                @Html.HiddenFor(model => model.AuthorId)

                <p>@Html.LabelFor(model => model.AuthorName, htmlAttributes: new { @class = "header-input-item" })</p>
                @Html.EditorFor(model => model.AuthorName, new { htmlAttributes = new { @class = "input-item" } })
                @Html.ValidationMessageFor(model => model.AuthorName, "", new { @class = "text-danger" })
            </div>
            <div style="margin-bottom:5%;" class="btn-item">
                <button type="submit" class="submit-btn1">Update Information</button>
            </div>
            <div class="btn-item">
                <button class="submit-btn23">
                    @Html.ActionLink("Cancel", "Index", "ManageAuthor")
                </button>
            </div>
        </div>
    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}