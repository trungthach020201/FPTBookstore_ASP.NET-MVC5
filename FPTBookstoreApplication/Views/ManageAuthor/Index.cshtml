@model IEnumerable<FPTBookstoreApplication.Models.Author>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}


<h2 style="margin: 3% 0 5% 45%; font-style:italic; color:chocolate">List of Authors</h2>

<button style="margin:2% 0 2% 80%; height:7%;width:15%; background-color:bisque; border-radius:10px;">
    @Html.ActionLink("Add New Author", "AddAuthor", "ManageAuthor")
</button>

<table class="table table-striped table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAuthor", new { id = item.AuthorId })
                @Html.ActionLink("Delete", "DeleteAuthor", new { id = item.AuthorId }, new { onclick = $"return confirm('Are you sure to detele author:{item.AuthorName}?')" })
            </td>
        </tr>
    }

</table>





