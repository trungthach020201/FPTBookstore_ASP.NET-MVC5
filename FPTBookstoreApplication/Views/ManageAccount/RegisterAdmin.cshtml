@model FPTBookstoreApplication.Models.Account
@{
    ViewBag.Title = "RegisterAdmin";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}


<div class="wrapper">

    @using (Html.BeginForm("RegisterAdmin", "ManageAccount", FormMethod.Post, new { @class = "login-form", role = "form" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="header">
            <h2 class="header-login">Register New Account</h2>
        </div>

        <div class="login-items">

            <div class="username-password-items">
                @Html.LabelFor(m => m.UserName, new { @class = "header-input-item" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "input-item" })

                @Html.LabelFor(m => m.FullName, new { @class = "header-input-item" })
                @Html.TextBoxFor(m => m.FullName, new { @class = "input-item" })


                @Html.LabelFor(m => m.Password, new { @class = "header-input-item" })
                @Html.PasswordFor(m => m.Password, new { @class = "input-item" })

                @Html.LabelFor(m => m.ConfirmPass, new { @class = "header-input-item" })
                @Html.PasswordFor(m => m.ConfirmPass, new { @class = "input-item" })


                @Html.LabelFor(m => m.PhoneNumber, new { @class = "header-input-item" })
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "input-item" })

                @Html.LabelFor(m => m.Birthday, new { @class = "header-input-item" })
                @Html.TextBoxFor(m => m.Birthday, new { @class = "input-item" })


                @Html.LabelFor(m => m.Address, new { @class = "header-input-item" })
                @Html.TextBoxFor(m => m.Address, new { @class = "input-item" })


                @Html.LabelFor(m => m.Email, new { @class = "header-input-item" })
                @Html.TextBoxFor(m => m.Email, new { @class = "input-item" })

                @Html.LabelFor(model => model.StatusCode, "Role", new { @class = "header-input-item" })
                @Html.RadioButtonFor(m => m.StatusCode, "0") <span>Customer</span>
                @Html.RadioButtonFor(m => m.StatusCode, "1") <span>Admin</span>
            </div>

            <div style="margin-bottom:5%;" class="btn-item">
                <button type="submit" class="submit-btn1">Register</button>
            </div>
            <div class="btn-item">
                <button type="submit" class="submit-btn23">
                    @Html.ActionLink("Cancel", "Index", "ManageAccount")
                </button>

            </div>
        </div>

    }
</div>

